{
  "manifest_version": 2,
  "homepage_url": "http://www.streamkeys.com",
  "icons": {"48": "icon48.png", "128": "icon128.png"},
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_title": "Streamkeys",
    "default_popup": "html/popup.html",
    "default_icon": "icon38.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/contentscript.js"]
    },
    {
      "matches": ["*://*.streamkeys.com/*"],
      "js": ["js/inject/sksite_inject.js"]
    }
  ],
  "applications": {
    "gecko": {
      "id": "streamkeys@streamkeys.com"
    }
  },
  "web_accessible_resources": [
    "js/inject/hoopla_inject.js",
    "js/inject/musickit_inject.js",
    "js/inject/palcomp3_inject.js",
    "js/inject/seesu_inject.js",
    "js/controllers/*"
  ],
  "permissions": ["tabs", "storage", "http://*/*", "https://*/*", "nativeMessaging"],
  "optional_permissions": ["notifications"],
  "commands": {
    "playPause": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Toggle play/pause"
    },
    "playNext": {
      "suggested_key": {
        "default": "MediaNextTrack"
      },
      "description": "Play next track"
    },
    "playPrev": {
      "suggested_key": {
        "default": "MediaPrevTrack"
      },
      "description": "Play previous track"
    },
    "mute": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "MacCtrl+Shift+2"
      },
      "description": "Toggle mute"
    },
    "stop": {
      "suggested_key": {
        "default": "MediaStop"
      },
      "description": "Stop all players"
    },
    "like": {
      "description": "Toggle like"
    },
    "dislike": {
      "description": "Toggle dislike"
    },
    "forward5": {
      "description": "Seek forward"
    },
    "replay5": {
      "description": "Seek backwards"
    },
    "volumeup": {
      "description": "Increase volume"
    },
    "volumedown": {
      "description": "Decrease volume"
    },
    "playerStateNotify": {
      "description": "Send notification of player(s) state"
    }
  }
}
